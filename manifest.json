{
    "manifest_version": 3,
    "name": "Facebook Anonymous Posts Hide",
    "version": "1.0",
    "description": "Facebookグループの匿名投稿を非表示にする拡張機能",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://*.facebook.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.facebook.com/*"],
        "js": ["content.js"]
      }
    ]
  }